{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "crypto-risk-analyzer-zeta.vercel.app"
        }
      ],
      "dest": "https://cryptorisk.blocksage.tech/$1",
      "status": 301
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}

